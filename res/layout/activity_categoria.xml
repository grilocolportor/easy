<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearPesquisa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/texPesquisa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
	<ListView
      	android:id="@+id/mainListView"
       	android:layout_width="fill_parent"
       	android:layout_height="338dp"
       	android:layout_weight="1.07" />

	<LinearLayout
	    android:id="@+id/linearRaio"
	   android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

		<SeekBar
		    android:id="@+id/seekBar1"
		    android:layout_width="161dp"
		    android:layout_height="fill_parent"
		    android:max="5000" />

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="0"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	
    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="btnPesquisar_click"
            android:text="Pesquisar" />

         <Button
            android:id="@+id/btnAddFavorito"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="btnAddFavorito_click"
            android:text="Add favoritos" />
    </LinearLayout>

</LinearLayout>